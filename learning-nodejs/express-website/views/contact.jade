extends layout

block content
  h1 Contact Me
  .container
    form(method='post', action='contact/send')
      .form-group
        label Name
        input.form-control(type='text', name="name", placeholder="2 chainz")
      .form-group
        label Email
        input.form-control(type='email', name="email", placeholder="example@youremail.com")
      .form-group
        label Message
        textarea.form-control(name='message', placeholder='Enter your message')
      button.btn.btn-success(type='submit')
        | Submit
